https://leetcode.com/problems/search-insert-position/

class Solution {
public:
    int searchInsert(vector<int>& nums, int target) {
        int low=0;
        int high=nums.size()-1;
        
        // 1 3 5 6 ()1
        // t f f f 
        //less than or equal to target =>last true
        
        // 1 3 5 6 (0)
        // f f f f 
        //less than or equal to target =>first false
        //or position of just greater than
        
        // 1 3 5 6 (4)
        // t t f f 
        //less than or equal to target =>first false
        
       //can becompresed using function with bool occurance 
        //occurance=true => to find occurance
        //occurance=false =>not present and to find position
        
        while(low<=high){
            int mid=low+(high-low)/2;
            if(nums[mid]==target)
                return mid;
            else if(target>nums[mid])
                low=mid+1;
            else
                high=mid-1;
                
        }
        
        low=0;
        high=nums.size()-1;
        
        int pos=high+1; //to handle just greater than
        //when target is greater than largest array element
        while(low<=high){
            int mid=low+(high-low)/2;
            if(nums[mid]>target){
                pos=mid;
                high=mid-1;
            }
            else if(target>nums[mid])
                low=mid+1;
            else
                high=mid-1;
                
        }
        
        return pos;
        
    }
};
